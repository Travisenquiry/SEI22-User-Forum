<!DOCTYPE html>
<html>
  <head>
    <title>Sei22UserForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application'%>
    <%= javascript_include_tag 'applications' %>
  </head>

  <body class="teal lighten-5">
  	<div class="container">
	  	<nav>
		    <div class="nav-wrapper">
		      <a href="/" class="brand-logo center"><i class="material-icons">hot_tub</i>Rabbit</a>
		      <% if user_signed_in? %>
			      <ul>
			        <li class="left"><a href="#" data-target="slide-out" class="sidenav-trigger show-on-large"><i class="material-icons">menu</i></a></li>
			      </ul>
		      <% end %>

		    </div>
		  </nav>
		  <ul id="slide-out" class="sidenav teal lighten-5">
		    <li><div class="user-view red lighten-2">
      		<span style="color: white"><i class="material-icons">hot_tub</i> Welcome to Rabbit!</span>
    		</div></li>
    		<li><div class="divider"></div></li>
    		<li><a href="/"><i class="material-icons">home</i>Index</a></li>
    		<li><a href="/community/new"><i class="material-icons">create_new_folder</i>Create new Community</a></li>
    		<li><%= link_to 'Log out', destroy_user_session_url, method: :delete %></li>
		  </ul>

	    <%= yield %>
	  </div>
  </body>
</html>