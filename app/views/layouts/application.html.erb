<!DOCTYPE html>
<html>
  <head>
    <title>Sei22UserForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application'%>
    <%= javascript_include_tag 'applications' %>
  </head>

  <body>
  	<div class="container">
	  	<nav>
		    <div class="nav-wrapper">
		      <a href="/" class="brand-logo center"><i class="material-icons">hot_tub</i>Rabbit</a>
		      <ul>
		        <li class="left"><a href="#" data-target="slide-out" class="sidenav-trigger show-on-large"><i class="material-icons">menu</i></a></li>
		      </ul>

		    </div>
		  </nav>
		  <ul id="slide-out" class="sidenav">
		    <li><div class="user-view">
      		<span><i class="material-icons">hot_tub</i> Welcome to Rabbit!</span>
    		</div></li>
    		<li><div class="divider"></div></li>
    		<li><a href="/">Index</a></li>
    		<li><a href="/community/new">Create new Community</a></li>
    		<li><%= link_to 'Log out', destroy_user_session_url, method: :delete %></li>
		  </ul>

	    <%= yield %>
	  </div>
  </body>
</html>